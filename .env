# Database Configuration (Local PostgreSQL)
DATABASE_URL=postgresql://newsuser:newspass@localhost:5432/newsdb

# For cloud migration, just change the URL:
# Supabase: postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
# Railway: postgresql://postgres:password@containers-us-west-xx.railway.app:5432/railway
# Render: postgresql://user:pass@xxx.render.com/dbname

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# Celery Configuration  
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI Configuration (Optional)
AI_ENABLED=false
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Application Settings
APP_NAME=News Aggregator
DEBUG=true
API_V1_STR=/api/v1

# RSS Collection Settings
RSS_POLL_INTERVAL=15
MAX_ARTICLES_PER_FEED=20
CONTENT_CACHE_TTL=86400
